<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>franken-sslvpn-pom</artifactId>
		<groupId>kr.co.future</groupId>
		<version>1.0.0</version>
	</parent>
	<artifactId>franken-xtmconf</artifactId>
	<version>3.2.4</version>
	<packaging>bundle</packaging>
	<name>Franken XTM Config</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>kr.co.future.sslvpn.xtmconf</Bundle-SymbolicName>
						<Export-Package>
							kr.co.future.sslvpn.xtmconf;version=${project.version},
							kr.co.future.sslvpn.xtmconf.alg;version=${project.version},
							kr.co.future.sslvpn.xtmconf.anti;version=${project.version},
							kr.co.future.sslvpn.xtmconf.dpi;version=${project.version},
							kr.co.future.sslvpn.xtmconf.etc;version=${project.version},
							kr.co.future.sslvpn.xtmconf.filtering;version=${project.version},
							kr.co.future.sslvpn.xtmconf.ha;version=${project.version},
							kr.co.future.sslvpn.xtmconf.ipsec;version=${project.version},
							kr.co.future.sslvpn.xtmconf.manage;version=${project.version},
							kr.co.future.sslvpn.xtmconf.msgbus;version=${project.version},
							kr.co.future.sslvpn.xtmconf.nac;version=${project.version},
							kr.co.future.sslvpn.xtmconf.network;version=${project.version},
							kr.co.future.sslvpn.xtmconf.object;version=${project.version},
							kr.co.future.sslvpn.xtmconf.ssl;version=${project.version},
							kr.co.future.sslvpn.xtmconf.system;version=${project.version},
							kr.co.future.sslvpn.xtmconf.waf;version=${project.version},
							kr.co.future.sslvpn.xtmconf.sql.csv;version=${project.version}
						</Export-Package>
						<Import-Package>
							com.mysql.jdbc;resolution:=optional,
							*
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-ipojo-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>ipojo-bundle</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh</artifactId>
				<version>1.0-beta-7</version>
			</extension>
		</extensions>
	</build>
	<dependencies>
		<dependency>
			<groupId>kr.co.future</groupId>
			<artifactId>franken-api</artifactId>
		</dependency>
		<dependency>
			<groupId>kr.co.future</groupId>
			<artifactId>franken-confdb</artifactId>
		</dependency>
		<dependency>
			<groupId>kr.co.future</groupId>
			<artifactId>franken-dom</artifactId>
		</dependency>
		<dependency>
			<groupId>kr.co.future</groupId>
			<artifactId>franken-ldap</artifactId>
		</dependency>
		<dependency>
			<groupId>kr.co.future</groupId>
			<artifactId>franken-msgbus</artifactId>
		</dependency>
		<dependency>
			<groupId>kr.co.future</groupId>
			<artifactId>franken-ntp</artifactId>
		</dependency>
		<dependency>
			<groupId>kr.co.future</groupId>
			<artifactId>franken-cron</artifactId>
		</dependency>
		<dependency>
			<groupId>kr.co.future</groupId>
			<artifactId>franken-linux-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.mysql.jdbc</groupId>
			<artifactId>com.springsource.com.mysql.jdbc</artifactId>
		</dependency>
	</dependencies>
</project>
